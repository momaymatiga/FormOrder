    <script>
        function formatDate(date) {
            if (!date) return '';
            const d = new Date(date);
            const day = String(d.getDate()).padStart(2, '0');
            const month = String(d.getMonth() + 1).padStart(2, '0');
            const year = d.getFullYear();
            return `${day}/${month}/${year}`;
        }

        // ++ NEW ++ Function to format numbers with thousand separators
        function formatNumber(input) {
            let value = input.value.replace(/[^0-9]/g, '');
            if (value) {
                input.value = parseInt(value, 10).toLocaleString('en-US');
            } else {
                input.value = '';
            }
        }

        let mobileVisibleRows = 1;
        const maxRows = 5;

        function setupMobileView() {
            const isMobile = window.innerWidth <= 768;
            const addItemBtn = document.getElementById('addItemBtn');
            const productRows = document.querySelectorAll('.form-container .product-row');
            
            if (isMobile) {
                if (mobileVisibleRows < maxRows) {
                    addItemBtn.style.display = 'inline-flex';
                } else {
                    addItemBtn.style.display = 'none';
                }
            } else {
                addItemBtn.style.display = 'none';
                productRows.forEach(row => {
                    row.style.display = ''; 
                });
            }
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            document.getElementById('orderDate').value = `${year}-${month}-${day}`;
            
            const addItemBtn = document.getElementById('addItemBtn');
            if (addItemBtn) {
                addItemBtn.addEventListener('click', () => {
                    if (mobileVisibleRows < maxRows) {
                        mobileVisibleRows++;
                        const nextRow = document.querySelector(`.product-row[data-label="${mobileVisibleRows}"]`);
                        if (nextRow) {
                            nextRow.style.display = 'block';
                        }
                        if (mobileVisibleRows >= maxRows) {
                            addItemBtn.style.display = 'none';
                        }
                    }
                });
            }
            
            setupMobileView();
        });

        window.addEventListener('resize', setupMobileView);


        function clearForm() {
            document.getElementById('orderForm').reset();
            const today = new Date();
            const year = today.getFullYear();
            const month = String(today.getMonth() + 1).padStart(2, '0');
            const day = String(today.getDate()).padStart(2, '0');
            document.getElementById('orderDate').value = `${year}-${month}-${day}`;
            
            const inputs = document.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.style.borderColor = '#e0e0e0';
                input.style.backgroundColor = '#f8f9fa';
            });

            mobileVisibleRows = 1;
            const productRows = document.querySelectorAll('.form-container .product-row');
            productRows.forEach((row, index) => {
                if(index > 0) {
                   row.style.display = ''; 
                }
            });
            setupMobileView();
        }
        
        function validateRequiredFields() {
            const requiredFields = [
                'customerName',
                'branch', 
                'ordererName',
                'phoneNumber'
            ];
            
            let isValid = true;
            let hasOrderData = false;
            let unitValidationError = false;

            for (const fieldId of requiredFields) {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    field.style.borderColor = '#dc2626';
                    field.style.backgroundColor = '#fef2f2';
                    isValid = false;
                } else {
                    field.style.borderColor = '#e0e0e0';
                    field.style.backgroundColor = '#f8f9fa';
                }
            }
             if (!isValid) {
                alert('กรุณากรอกข้อมูลที่มีเครื่องหมาย * ให้ครบถ้วน');
                return false;
            }
            
            const phoneField = document.getElementById('phoneNumber');
            const phoneNumbers = phoneField.value.replace(/[^0-9]/g, '');
            if (phoneNumbers.length !== 9 && phoneNumbers.length !== 10) {
                phoneField.style.borderColor = '#dc2626';
                phoneField.style.backgroundColor = '#fef2f2';
                isValid = false; 
            }
            if (!isValid) {
                alert('เบอร์โทรศัพท์ต้องมี 9 หรือ 10 หลักเท่านั้น');
                return false;
            }

            for (let i = 1; i <= 5; i++) {
                const product = document.querySelector(`[name="product${i}"]`).value.trim();
                // ++ UPDATED ++ Remove commas before validation
                const orderValue = document.querySelector(`[name="order${i}"]`).value;
                const order = orderValue.replace(/,/g, '');
                
                const unitSelect = document.querySelector(`[name="unit${i}"]`);
                const unit = unitSelect.value;
                
                unitSelect.style.borderColor = '#e0e0e0';
                unitSelect.style.backgroundColor = '#f8f9fa';

                if ((product || (order && parseInt(order) > 0)) && !unit) {
                    unitSelect.style.borderColor = '#dc2626';
                    unitSelect.style.backgroundColor = '#fef2f2';
                    isValid = false;
                    unitValidationError = true;
                }
                
                if (order && parseInt(order) > 0 && unit) {
                    hasOrderData = true;
                }
            }
            
            if (unitValidationError) {
                alert('กรุณาเลือก "หน่วยสินค้า"');
                return false;
            }

            if (!hasOrderData) {
                alert('กรุณาระบุจำนวนสินค้าอย่างน้อย 1 รายการ');
                return false;
            }
            
            return isValid;
        }

        
        function validatePhoneNumber(input) {
            try {
                let value = input.value.replace(/[^0-9]/g, '');
                
                if (value.length > 10) {
                    value = value.substring(0, 10);
                }
                
                input.value = value;
                
                if (value.length === 9 || value.length === 10) {
                    input.style.borderColor = '#10b981';
                    input.style.backgroundColor = '#f0fdf4';
                } else if (value.length > 0) {
                    input.style.borderColor = '#f59e0b';
                    input.style.backgroundColor = '#fffbeb';
                } else {
                    input.style.borderColor = '#e0e0e0';
                    input.style.backgroundColor = '#f8f9fa';
                }
            } catch (error) {
                console.error('An error occurred in validatePhoneNumber:', error);
            }
        }
        
        function previewPDF() {
            try {
                if (!validateRequiredFields()) {
                    return;
                }
                
                const previewContent = createPDFTemplate();
                document.getElementById('previewContent').innerHTML = previewContent;
                document.getElementById('previewModal').style.display = 'block';
                document.body.style.overflow = 'hidden';
            } catch (error) {
                console.error('เกิดข้อผิดพลาดในการสร้างตัวอย่าง:', error);
                alert('เกิดข้อผิดพลาดในการสร้างตัวอย่าง PDF');
            }
        }
        
        function downloadPDF() {
            if (!validateRequiredFields()) {
                return;
            }
            generatePDF();
            closePreview();
        }
        
        function closePreview() {
            document.getElementById('previewModal').style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        window.onclick = function(event) {
            const modal = document.getElementById('previewModal');
            if (event.target == modal) {
                closePreview();
            }
        }
        
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closePreview();
            }
        });
        
        function safeThaiText(text) {
            if (!text) return '';
            return text.replace(/[^\u0E00-\u0E7F\w\s\-\.@]/g, '?');
        }

        function generatePDF() {
            try {
                if (!validateRequiredFields()) {
                    return;
                }
                
                const pdfContent = createPDFTemplate();
                
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = pdfContent;
                tempDiv.style.position = 'absolute';
                tempDiv.style.left = '-9999px';
                tempDiv.style.top = '0';
                tempDiv.style.width = '210mm';
                tempDiv.style.background = 'white';
                tempDiv.style.padding = '20px';
                tempDiv.style.fontFamily = "'Sarabun', Arial, sans-serif";
                tempDiv.style.fontSize = '14px';
                tempDiv.style.color = 'black';
                document.body.appendChild(tempDiv);
                
                html2canvas(tempDiv, {
                    scale: 2,
                    useCORS: true,
                    allowTaint: true,
                    backgroundColor: '#ffffff'
                }).then(canvas => {
                    const { jsPDF } = window.jspdf;
                    const doc = new jsPDF();
                    
                    const imgData = canvas.toDataURL('image/png');
                    const imgWidth = 190;
                    const imgHeight = (canvas.height * imgWidth) / canvas.width;
                    
                    if (imgHeight > 280) {
                        const ratio = 280 / imgHeight;
                        doc.addImage(imgData, 'PNG', 10, 10, imgWidth * ratio, 280);
                    } else {
                        doc.addImage(imgData, 'PNG', 10, 10, imgWidth, imgHeight);
                    }
                    
                    document.body.removeChild(tempDiv);
                    
                    const orderDateVal = document.getElementById('orderDate').value;
                    const dateStr = formatDate(orderDateVal) || new Date().toISOString().split('T')[0];
                    const filename = `Admixture_Order_${dateStr.replace(/\//g, '-')}.pdf`;
                    
                    doc.save(filename);
                }).catch(error => {
                    console.error('Error generating PDF:', error);
                    alert('เกิดข้อผิดพลาดในการสร้าง PDF กรุณาลองใหม่อีกครั้ง');
                    if (document.body.contains(tempDiv)) {
                        document.body.removeChild(tempDiv);
                    }
                });
            } catch (error) {
                console.error('เกิดข้อผิดพลาดในการสร้าง PDF:', error);
                alert('เกิดข้อผิดพลาดในการสร้าง PDF กรุณาลองใหม่อีกครั้ง');
            }
        }
        
        function createPDFTemplate() {
            const orderDate = formatDate(document.getElementById('orderDate').value);
            const customerName = safeThaiText(document.getElementById('customerName').value);
            const branch = safeThaiText(document.getElementById('branch').value);
            const fcNumber = 'FC' + document.getElementById('fcNumber').value;
            const ordererName = safeThaiText(document.getElementById('ordererName').value);
            const phoneNumber = document.getElementById('phoneNumber').value;
            
            let tableRows = '';
            for (let i = 1; i <= 5; i++) {
                const product = safeThaiText(document.querySelector(`[name="product${i}"]`).value);
                const order = document.querySelector(`[name="order${i}"]`).value || '0';
                
                if ((parseInt(order.replace(/,/g, '')) > 0) || product) {
                    const remaining = document.querySelector(`[name="remaining${i}"]`).value || '0';
                    const deliveryDate = formatDate(document.querySelector(`[name="deliveryDate${i}"]`).value) || '-';
                    const unit = safeThaiText(document.querySelector(`[name="unit${i}"]`).value) || '';
                    const note = safeThaiText(document.querySelector(`[name="note${i}"]`).value) || '-';
                    const formattedNote = note.replace(/\n/g, '<br>');

                    tableRows += `
                        <tr>
                            <td class="col-no">${i}</td>
                            <td class="col-product">${product}</td>
                            <td class="col-remaining">${remaining}</td>
                            <td class="col-order">${order}</td>
                            <td class="col-unit">${unit}</td>
                            <td class="col-date">${deliveryDate}</td>
                            <td class="col-note">${formattedNote}</td>
                        </tr>
                    `;
                }
            }

            if (!tableRows) {
                tableRows = '<tr><td colspan="7" style="text-align: center; color: #777;"><i>-- ไม่มีรายการสั่งซื้อ --</i></td></tr>';
            }
            
            return `
                <div style="width: 100%; max-width: 800px; margin: 0 auto; font-family: 'Sarabun', Arial, sans-serif; color: #333; font-size: 14px; line-height: 1.6;">
                    <div style="text-align: center; margin-bottom: 20px;">
                        <h1 style="font-size: 22px; color: #dc2626; margin-bottom: 10px;">ใบสั่งซื้อ Admixture</h1>
                    </div>
                    
                    <div style="text-align: left; margin-bottom: 20px; font-size: 14px; line-height: 1.7;">
                        <h2 style="font-size: 1.1em; color: #2c3e50; margin-bottom: 10px;">กรุณาส่ง Team Franchise</h2>
                        <p style="margin: 5px 0; font-size: 1em;">บมจ.บทรหลวงคอนกรีต Tel : 02-797-7530</p>
                        <p style="margin: 5px 0; font-size: 1em;">ส่งใบสั่งซื้อมายัง E-mail : <span style="color: #e74c3c; font-weight: 600;">scco-admgroup@siamcitycement.com</span></p>
                    </div>

                    <div style="border: 1px solid #dee2e6; border-radius: 8px; margin-bottom: 20px; padding: 15px; font-size: 13px; line-height: 1.8;">
                        <p style="margin: 2px 0;"><strong>วันที่สั่ง:</strong> ${orderDate}</p>
                        <p style="margin: 2px 0;"><strong>ชื่อโรงงาน/หน่วยผลิต:</strong> ${customerName}</p>
                        <p style="margin: 2px 0;"><strong>สาขา:</strong> ${branch}</p>
                        <p style="margin: 2px 0;"><strong>เลขที่ FC:</strong> ${fcNumber}</p>
                    </div>

                    <div class="preview-table-wrapper">
                        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; font-size: 12px;">
                            <thead>
                                <tr style="background-color: #dc2626; color: white;">
                                    <th class="col-no" style="color: white;">ลำดับที่</th>
                                    <th class="col-product" style="color: white;">ชื่อสินค้า</th>
                                    <th class="col-remaining" style="color: white;">คงเหลือ</th>
                                    <th class="col-order" style="color: white;">สั่งเข้า</th>
                                    <th class="col-unit" style="color: white;">หน่วยสินค้า</th>
                                    <th class="col-date" style="color: white;">วันที่ต้องการ</th>
                                    <th class="col-note" style="color: white;">หมายเหตุ</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${tableRows}
                            </tbody>
                        </table>
                    </div>
                    
                    <div style="margin-top: 20px; padding: 15px; font-size: 13px; border: 1px solid #dee2e6; border-radius: 8px;">
                        <span style="display: inline-block; margin-right: 50px;"><strong>ชื่อผู้สั่งสินค้า:</strong> ${ordererName}</span>
                        <span style="display: inline-block;"><strong>เบอร์โทรศัพท์:</strong> ${phoneNumber}</span>
                    </div>
                    
                    <div style="margin-top: 20px; font-size: 12px; border: 1px solid #dee2e6; background: #f8f9fa; padding: 15px; border-radius: 8px;">
                        <h3 style="color: #2c3e50; margin: 0 0 10px 0; font-size: 1.2em;">หมายเหตุ:</h3>
                        <ol style="padding-left: 20px; margin: 0; line-height: 1.7;">
                            <li style="margin-bottom: 5px;">กรุณาสั่งน้ำยาเมื่อสต็อกน้ำยาลดลงเหลือ 1,200 – 1,000  ลิตรทันที เพื่อป้องกันปัญหาวัตถุดิบขาดสต็อก</li>
                            <li style="margin-bottom: 5px;">กรุณาส่งมาช่วงเวลา <span style="color: #e74c3c; font-weight: 600;">08.00 – 12.00 น.</span> ในวันจันทร์ ถึง วันศุกร์ (เว้นวันหยุดนักขัตฤกษ์-อาทิตย์ และวันหยุดนักขัตฤกษ์)</li>
                            <li style="margin-bottom: 5px;">กรณีบัญชีซื้อขายของท่านเป็นบัญชีเงินสด  เมื่อสั่งสินค้าจำเป็นจะต้องชำระเงินค่าสินค้านั้นมาก่อน แนบส่งสลิปใบ Pay in และ ใบสั่งซื้อสินค้าทุกครั้งส่งทางอีเมล</li>
                            <li style="color: black; margin-bottom: 5px;"><span style="color: #e74c3c; font-weight: 600;">กรณีใบสั่งซื้อน้ำยา วันจันทร์ - พฤหัสบดี น้ำยาจะส่งถึงหน่วยผลิต  ภายใน 5 วัน นับจากวันสั่งซื้อ</span></li>
                            <li style="color: black; margin-bottom: 5px;"><span style="color: #e74c3c; font-weight: 600;">กรณีใบสั่งซื้อน้ำยา วันพฤหัสบดี - ศุกร์  น้ำยาจะส่งถึงหน่วยผลิต  ภายใน 7 วัน นับจากวันสั่งซื้อ</span></li>
                        </ol>
                        <p style="color: #e74c3c; font-weight: 600; text-align: center; margin-top: 10px;">(เนื่องจากคลังสินค้าหยุด เสาร์ – อาทิตย์)</p>
                    </div>
